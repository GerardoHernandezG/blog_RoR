<p id="notice"><%= notice %></p>

<h1>Categorías</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>  
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td style="color: <%= category.color %>;"><%= category.name %></td>           
        <td><%= link_to 'Mostrar', category %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoría', new_category_path %>
