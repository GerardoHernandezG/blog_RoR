<center><h2>Iniciar Sesión</h2>
  <div style="width: 80%; margin: 0 auto;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, 'Correo Electrónico' %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control-login" %>
      </div>

      <div class="field">
        <%= f.label :password, "Contraseña" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control-login" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Recordarme" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Entrar", class: "btn-submit be-red white large-padding" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</center>
